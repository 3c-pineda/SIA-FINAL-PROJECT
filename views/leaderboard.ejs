                    </tbody>
                  </table>
                </div>
              </div>

              <!-- Hard Scores -->
              <div class="col-12 col-md-4">
                <div class="bg-white shadow rounded p-4 mb-4">
                  <h5 class="fw-bold">Hard</h5>
                  <table class="table table-bordered table-striped">
