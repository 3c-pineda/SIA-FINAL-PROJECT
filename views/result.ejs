<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  </head>
  <body class="bg-light">
    <!-- NAVIGATION BAR -->
    <%- include('partials/nav.ejs') %>

    <div class="container min-vh-100 d-flex flex-column align-items-center mt-4">
      <!-- Result Header -->
      <div class="mb-4 bg-white shadow rounded p-4 w-100 text-center">
        <h4 class="fw-bold">Your Score: <span class="text-primary"><%= score %>/<%= totalQuestions %></span></h4>
      </div>

      <!-- Results for Each Question -->
      <% questions.forEach((question, index) => { %>
        <div class="mb-4 bg-white shadow rounded p-4 w-100">
          <h5 class="fw-bold"><%= index + 1 %>. <%- question.question %></h5>
          <p class="mb-2"><strong>Your Answer:</strong> 
            <span class="<%= userAnswers[index] === correctAnswers[index] ? 'text-success' : 'text-danger' %>">
              <%- userAnswers[index] %>
            </span>
          </p>
          <p class="mb-2"><strong>Correct Answer:</strong> <span class="text-primary"><%- correctAnswers[index] %></span></p>
        </div>
      <% }); %>

      <!-- Action Buttons (Go Home, Visit Profile, Play Again) -->
      <div class="d-flex gap-3 flex-column flex-sm-row mt-4 mb-4 w-100">
        <a href="/" class="btn btn-danger w-100 w-sm-auto btn-lg">Go Home</a>
        <a href="/profile" class="btn btn-primary w-100 w-sm-auto btn-lg">Visit Profile</a>
        <a href="/quiz" class="btn btn-warning w-100 w-sm-auto btn-lg">Play Again</a>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>
